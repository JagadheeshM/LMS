<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script>
        async function markAsComplete(id){
            console.log("function called",id)
            fetch(`/courses/${id}/markAsComplete`,{
                method:"put",
                headers:{"Content-type":"application/json"}
            })
            .then((res)=>{
                if(res.ok){
                    window.location.reload();
                }
            })
            .catch((err)=>console.error(err));
        }
    </script>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="h-full">
        <%- include('header.ejs') %>
        <div class="flex min-h-full flex-col justify-center m-8 border-2 px-6 py-10 lg:px-8">
            <div class="sm:mx-auto sm:w-full sm:max-w-sm">
              <h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900"><%= page.title %></h2>
            </div>
          
            <div class="mt-5 sm:mx-auto sm:w-full ">
              <form class="space-y-6" action="/session" method="POST">
                <div>
                  <div class="mt-2">
                    <textarea rows-5 id="content" name="content" type="content" disabled class="block w-full h-fit rounded-md border-0 px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 sm:text-sm sm:leading-6"><%= page.content %></textarea>
                  </div>
                </div>
                <% if(!completed){ %>
                <div>
                  <button type="button" onclick="markAsComplete(<%=page.id%>)"  class="flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"><svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 0 1 0-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178Z" />
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                  </svg>
                   Mark as complete</button >
                </div>
                <%}else{%>
                <div>
                    <a  href="" class="flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"><svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                      <path stroke-linecap="round" stroke-linejoin="round" d="m4.5 12.75 6 6 9-13.5" />
                    </svg>
                    Marked as completed</a >
                </div>
                <%}%>
              </form>
            </div>
          </div>
</body>
</html>