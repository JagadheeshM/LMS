<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script>
        async function markAsComplete(id){
            console.log("function called",id)
            fetch(`/courses/${id}/markAsComplete`,{
                method:"put",
                headers:{"Content-type":"application/json"}
            })
            .then((res)=>{
                if(res.ok){
                    window.location.reload();
                }
            })
            .catch((err)=>console.error(err));
        }
    </script>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="h-full">
        <%- include('header.ejs') %>
        <div class="flex min-h-full flex-col justify-center m-8 border-2 px-6 py-10 lg:px-8">
            <div class="sm:mx-auto sm:w-full sm:max-w-sm">
              <h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900"><%= page.title %></h2>
            </div>
          
            <div class="mt-5 sm:mx-auto sm:w-full ">
              <form class="space-y-6" action="/session" method="POST">
                <div>
                  <div class="mt-2">
                    <textarea rows-5 id="content" name="content" type="content" disabled class="block w-full h-fit rounded-md border-0 px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 sm:text-sm sm:leading-6"><%= page.content %></textarea>
                  </div>
                </div>
                <% if(!completed){ %>
                <div>
                  <a onclick="markAsComplete(<%=page.id%>)" class="flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Mark as complete</a >
                </div>
                <%}else{%>
                <div>
                    <a  href="" class="flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Marked as completed</a >
                </div>
                <%}%>
              </form>
            </div>
          </div>
</body>
</html>